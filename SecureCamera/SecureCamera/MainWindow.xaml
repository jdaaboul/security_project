<Window x:Class="SecureCamera.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SecureCamera"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="DiscoveredDeviceList" HorizontalAlignment="Center" 
                 Height="250" VerticalAlignment="Top" 
                 Width="250" Margin="0,35,0,0" />

        <Button Content="Discover" HorizontalAlignment="Center" 
                Margin="0,10,0,0" VerticalAlignment="Top" 
                Width="75" Click="DiscoverButton"/>

    </Grid>
</Window>
